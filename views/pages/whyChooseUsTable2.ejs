
<section class="content mt-3 ">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Data Table</h3>
                    </div>

                    <!-- /.card-header -->
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="example" class="display nowrap" style="width:100%">
                                <thead>
                                    <tr>
                                      
                                        <th>No</th>
                                        <th>Link Name</th>
                                        <th>Link</th>
                                        <th>Icon</th>
                                        <th>image</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% whyChooseUsTable2.forEach((item, index) => { %>
                                        <tr data-row-id="<%= item.id %>">

                                            <td>
                                                <%= index + 1 %>
                                            </td>
                                            <td>
                                                <%= item.linkName %>
                                            </td>
                                            <td>
                                                <%= item.link %>
                                            </td>
                                            <td>
                                                <%= item.iconUrl.substring(0, 20) %> . . .
                                            </td>
                                          
                                            <td>
                                                <img src="/why-choose-us/<%= item.imageUrl %>" alt="Frame Image"
                                                    width="100">
                                            </td>

                                            <td>
                                                <!-- Edit Icon -->
                                                <!-- Edit Icon -->
                                                <a href="#" data-bs-toggle="modal" data-bs-target="#editWhyChoose2Modal<%= item.id %>">
                                                    <i class="fas fa-edit"></i>
                                                  </a>

                                            </td>
                                        </tr>

                                        <div class="modal fade" id="editWhyChoose2Modal<%= item.id %>" tabindex="-1" aria-labelledby="editWhyChoose2ModalLabel<%= item.id %>" aria-hidden="true">
                                            <div class="modal-dialog">
                                              <form action="/why-choose-2/update/<%= item.id %>" method="POST" enctype="multipart/form-data">
                                                <div class="modal-content">
                                                  <div class="modal-header">
                                                    <h5 class="modal-title" id="editWhyChoose2ModalLabel<%= item.id %>">Edit Why choose Us</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                  </div>
                                      
                                                  <div class="modal-body">
                                                    <div class="form-group">
                                                      <label for="author_name">Link Name</label>
                                                      <input type="text" name="linkName" class="form-control" value="<%= item.linkName %>" required />
                                                    </div>
                                      
                                                    <div class="form-group">
                                                      <label for="author_designation">Link</label>
                                                      <input type="text" name="link" class="form-control" value="<%= item.link %>" required />
                                                    </div>
                                      
                                                    <div class="form-group">
                                                      <label for="description">Icon</label>
                                                      <input name="iconUrl" class="form-control" value="<%= item.iconUrl %>" required />
                                                    </div>
                            
                                      
                                                    <% if (item.imageUrl) { %>
                                                      <div class="form-group">
                                                        <label>Existing Image</label>
                                                        <div>
                                                          <img src="/why-choose-us/<%= item.imageUrl %>" alt="Author Image" width="100">
                                                        </div>
                                                      </div>
                                                    <% } %>
                                      
                                                    <div class="form-group">
                                                      <label for="author_image">Upload New Image</label>
                                                      <input type="file" name="imageUrl" class="form-control" accept=".jpg,.jpeg,.png,.svg" />
                                                    </div>
                                                  </div>
                                      
                                                  <div class="modal-footer">
                                                    <button type="submit" class="btn btn-primary">Update</button>
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                  </div>
                                                </div>
                                              </form>
                                            </div>
                                          </div>
                                        <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



<!-- jQuery (always first) -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

