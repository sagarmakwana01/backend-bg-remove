<section class="content">
    <div class="container-fluid">
        <div class="col-md-8">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Add WhyChooseUs</h3>
                </div>

                <div class="mt-3">
                    <% if (message) { %>
                        <div
                            class="alert <%= message.type === 'success' ? 'alert-success' : 'alert-danger' %> alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            <%= message.message %>
                        </div>
                        <% } %>
                </div>

                <!-- Form Start -->
                <form action="/why-choose-us-first" method="POST" enctype="multipart/form-data" id="form-footer">
                    <div class="card-body">
                        <div id="socialMediaWrapper">
                            <div class="social-media-item mb-3">

                                <div class="form-group">
                                    <label>Tab Name</label>
                                    <input type="text" name="tabName" class="form-control"
                                        placeholder="Name" required autocomplete="off">
                                </div>
                                <div class="form-group">
                                    <label>Image 1</label>
                                    <input type="file" name="tabImages[0][tabImages]" class="form-control"
                                        accept=".jpg,.jpeg,.png,.svg" autocomplete="off">
                                </div>
                                <hr />
                                <div class="form-group">
                                    <label>Image 2</label>
                                    <input type="file" name="tabImages[1][tabImages]" class="form-control"
                                        accept=".jpg,.jpeg,.png,.svg" autocomplete="off">
                                </div>
                                <hr />
                                <div class="form-group">
                                    <label>Image 3</label>
                                    <input type="file" name="tabImages[2][tabImages]" class="form-control"
                                        accept=".jpg,.jpeg,.png,.svg" autocomplete="off">
                                </div>
                                <hr />
                                <div class="form-group">
                                    <label>Image 4</label>
                                    <input type="file" name="tabImages[3][tabImages]" class="form-control"
                                        accept=".jpg,.jpeg,.png,.svg" autocomplete="off">
                                </div>
                             
                            </div>
                        </div>
                        <!-- <button type="button" class="btn btn-secondary mb-3" id="addSocialMedia">Add Tab</button> -->

                        <!-- Submit -->
                        <div class="card-footer mt-3">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>

                    </div>
                </form>

            </div>
        </div>
    </div>
</section>


   